<UserControl x:Class="ColorMixer.Views.ConnectorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ColorMixer.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="100"
             d:DesignWidth="100"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style BasedOn="{StaticResource ConnectorButtonStyle}"
               TargetType="Button">
            <Setter Property="FontFamily" Value="{StaticResource Segoe MDL2 Assets}" />
            <Setter Property="FontSize" Value="10" />
        </Style>
    </UserControl.Resources>
    <Button x:Name="ConnectorButton"
            Background="{DynamicResource WhiteBrush}"
            BorderBrush="{DynamicResource BlackBrush}"
            BorderThickness="2" />
    <!--
        &#xE106; - cross
        &#xECCC; - bullet
    -->
</UserControl>